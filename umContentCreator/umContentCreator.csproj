<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
		<AssemblyVersion>1.0.2</AssemblyVersion>
		<Version>1.0.2</Version>
		<InformationalVersion>1.0.2</InformationalVersion>
		<TargetFramework>net6.0</TargetFramework>
		<ContentTargetFolders>.</ContentTargetFolders>
		<Product>UmContentCreator</Product>
		<PackageId>UmContentCreator</PackageId>
		<Title>UmContentCreator</Title>
		<PackageTags>umbraco-marketplace</PackageTags>
		<Company>$(Authors)</Company>
		<Authors>OSKI solutions</Authors>
		<Description></Description>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
    </PropertyGroup>

	<ItemGroup>
		
		<Content Include="App_Plugins\UmContentCreator\**">
			<ExcludeFromSingleFile>true</ExcludeFromSingleFile>
			<CopyToPublishDirectory>Always</CopyToPublishDirectory>
		</Content>
		
		<None Include="build\**">
			<Pack>true</Pack>
			<PackagePath>buildTransitive</PackagePath>
		</None>
		
	</ItemGroup>


	<ItemGroup>
	  <ProjectReference Include="..\umContentCreator.Core\umContentCreator.Core.csproj" />
	</ItemGroup>

</Project>
